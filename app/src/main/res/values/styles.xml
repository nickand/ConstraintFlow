<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_4</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Buttons -->
    <style name="IG.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:minHeight">@dimen/button_size_xxxl</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:paddingTop">@dimen/spacing_xxxxs</item>
        <item name="android:paddingBottom">@dimen/spacing_xxs</item>
        <item name="android:paddingLeft">@dimen/spacing_l</item>
        <item name="android:paddingRight">@dimen/spacing_l</item>
        <item name="android:paddingStart">@dimen/spacing_l</item>
        <item name="android:paddingEnd">@dimen/spacing_l</item>
    </style>

    <style name="IG.Button.Primary">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/color_btn_primary</item>
        <item name="android:paddingTop">@dimen/spacing_xxs</item>
    </style>

</resources>